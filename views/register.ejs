<link rel="stylesheet" href="/css/style_login_register.css">
<div class="main">
    <div class="bgOpacity"></div>
    <div class="wrapper">
        <form method="POST">
            <h1 style="margin-bottom: 30px;">Register</h1>
            <div class="form-input-div">
                <input type="text" name="name" placeholder="Name" class="input">
                <span class="iconContainer">
                    <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="email" name="mail" placeholder="E-Mail" class="input">
                <span class="iconContainer">
                    <i class="fa fa-envelope"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="password" name="pass" placeholder="Password" class="input">
                <span class="iconContainer">
                    <i class="fa fa-lock"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="password" name="pass2" placeholder="Confirm Password" class="input">
                <span class="iconContainer">
                    <i class="fa fa-lock"></i>
                </span>
            </div>
            <input type="submit" value="OK">
        </form>
    </div>
</div>

