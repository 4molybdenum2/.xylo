<head>
    <link rel="stylesheet" href="/css/style_login_register.css" />
    <script>
        // Avoid these errors
        $(document).ready(() => {
        if (<%= isError %>) {
          var alertTitle = "<%= msgTitle %>";
          var alertMessage = "<%= msgBody %>";
          Swal.fire(alertTitle, alertMessage, "error");
        }
      });
    </script>
</head>
<div class="main">
    <div class="bgOpacity"></div>
    <div class="wrapper">
        <form method="POST">
            <h1 style="position: absolute; top: 40px">Register</h1>
            <div class="form-input-div">
                <input type="text" name="name" placeholder="Name" class="input">
                <span class="iconContainer">
                    <i class="fa fa-user"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="email" name="mail" placeholder="E-Mail" class="input">
                <span class="iconContainer">
                    <i class="fa fa-envelope"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="password" name="pass" placeholder="Password" class="input">
                <span class="iconContainer">
                    <i class="fa fa-lock"></i>
                </span>
            </div>
            <div class="form-input-div">
                <input type="password" name="pass2" placeholder="Confirm Password" class="input">
                <span class="iconContainer">
                    <i class="fa fa-lock"></i>
                </span>
            </div>
            <input id="submit-button" type="submit" value="OK" style="position: absolute; bottom: 40px;">
        </form>
    </div>
</div>