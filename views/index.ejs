<script>
  gsap.from(".landing-text-anim", {
    opacity: 0,
    duration: 1,
    y: -100,
    ease: Power1,
    stagger: 0.1,
    delay: 1.3,
  });
  gsap.from("#socialmedia", {
    duration: 1,
    y: 50,
    delay: 3.2,
    opacity: 0,
    stagger: 0.2
  });
  gsap.from(".locations", {
    duration: 1,
    y: 50,
    delay: 3.2,
    opacity: 0,
    stagger: 0.2
  });
  gsap.from(".buttons", {
    opacity: 0,
    duration: 1,
    x: -100,
    ease: Power1,
    stagger: 0.2,
    delay: 2.1
  });
  var action = gsap
    .timeline()
    .from(".feature-content", {
      opacity: 0,
      duration: 1,
      y: -100,
      ease: Power1,
      stagger: 0.4,
      delay: 0.6
    });

  // ScrollNav
  const body = document.getElementById("body");
  
  window.addEventListener("scroll", () => {
    var element = document.getElementById("nav");
    var scrollPercent = ($(window).scrollTop()/window.innerHeight);
    if(scrollPercent > 0.1){
      element.style.backgroundColor = "rgba(255, 255, 255, 0.9)";
    }
    else
      element.style.backgroundColor = "transparent";
  });

  // scrollmagic
  var controller = new ScrollMagic.Controller();

  new ScrollMagic.Scene({
    triggerElement: ".stories",
    triggerHook: 2.5,
    reverse: true
  })
    .setTween(action)
    .addTo(controller);
</script>
