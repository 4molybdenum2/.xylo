<link rel="stylesheet" href="css/dashboard.css">
<div class="main">
  <nav class="navbar">
    <div>Welcome, <%= name %></div>
    <div><a href="/logout">Logout</a></div>
  </nav>

  <!-- TODO: Test on Website ONLY -->
  <!-- TODO: CAUTION: Iss form wale div me kuch change mat kar. -->
  <div class="form-content">
      <form
        id="uploadForm"
        action="https://script.google.com/macros/s/AKfycbzj8DKOem_jqQeU7hyxhN2-ZURZ1jnYto7C7GW3LV0/dev"
        method="POST"
      >
        <input type="hidden" name="fileContent" id="fileContent" />
        <input type="hidden" name="filename" id="filename" />
        <input type="hidden" name="uid" id="uid" value="<%= uid %>" />
        <h3>&nbsp;&nbsp;&nbsp;&nbsp;Title</h3>
        <input type="text" name="title" id="title" />
        <h3> &nbsp;&nbsp;&nbsp;&nbsp;Content</h3>
        <input type="text" name="content" id="content">
        <h3> &nbsp;&nbsp;&nbsp;&nbsp;Place</h3>
        <input type="text" name="place" id="place" />
      </form>
  </div>
  <div class="files">
    <input type="file" name="attach" id="attach" required />
    <input id="submit" type="button" value="SUBMIT" onclick="UploadFile();" />
  </div>

  <div class="posts">
    
  </div>
</div>
<script>
  function UploadFile() {
    var reader = new FileReader();
    var file = document.getElementById("attach").files[0];
    reader.onload = function() {
      document.getElementById("fileContent").value = reader.result;
      document.getElementById("filename").value = file.name;
      document.getElementById("uploadForm").submit();
    };
    reader.readAsDataURL(file);
  }
</script>